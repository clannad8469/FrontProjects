

*{
    margin: 0;
    padding: 0;
}


/*轮播部分*/
.content-swiper{
    width: 100%;
    height: auto;
    margin: 0;
    padding: 0;
    background-color: #6d6d72;
}

/*slide*/
.my_slide{
    margin: 0;
    height: 400px;
    width: 100%;
}

.my_slide img{
    height: 100%;
    width: 100%;
}


.handlines{
    width: 100%;
    height: 2rem;
    margin: 0;
    padding: 0;
    background-color: #007aff;
    position: relative;
    top: 0;
}

.handlines span{
    margin: 0;
    padding: 10px 0 10px 30px;
    float: left;
}


/*游戏部分*/
.content-game{
    width: 100%;
    height: auto;
    margin: 0;
}

.game-title{
    width: 100%;
    height: 1.2rem;
    margin: 0 auto;
    text-align: center;
}

.content-game1{
    width: 100%;
    margin: 0;
    padding: 0;
    border-top: 1px solid #5f646e;
    border-bottom: 1px solid #5f646e;
}

.content-game1-content{
    width: 50%;
    margin: 0;
    padding: 0;
    background-color: #4cd964;
}

#content-game1-content1{
    border-right: 1px solid #5f646e;
}

.row .col-50 {
    width: 50%;
    margin-left: 0;
}


.content-game1-img{
    width: 6rem;
    height: 6rem;
    padding: 0.5rem;
    margin: 0;
    float: left;
}

.content-game1-img img{
    width: 100%;
    height: 100%;
}

.content-game1-cont{
    width: auto;
    height: auto;
    margin: 0;
    padding: 0.5rem;
    float: left;
}

.content-game1-title{
    display: block;
}

.content-game1-des1{

}

.content-game1-des-end{
    margin: 0;
    padding: 3px;
    position: relative;
    bottom: 0px;
}

/*box*/
.content-game2{
    width: 100%;
    height: 11rem;
    margin: 0 auto;
    padding: 0;
    overflow: scroll;
    text-align: center;
}

.content-game2 ul{
    width: 72rem;
    height: 10rem;
    margin: 0;
    padding: 0;
    list-style-type: none;
    overflow: hidden;
}

.content-game2-box{
    width: 8rem;
    height: 8rem;
    margin: 0.5rem;
    padding: 0;
    float: left;
}

.content-game2-box img{
    width: 6rem;
    height: 6rem;
    position: relative;
    top: 5px;
    margin: 3px;
    padding: 0;
    overflow: hidden;
}

.content-game2-box span{
    display: block;
}



/*********** news ************/
.content-news{
    width: 100%;
    height: auto;
    margin: 0;
    padding: 0;
}

.content-news .news-title{
    position: relative;
    width: 100%;
    height: 2.2rem;
    border-bottom: 1px solid #5f646e;
}

.content-news .com-title-change{
    position: absolute;
    bottom: 10px;
    right: 22px;
    text-align: center;
}

.content-news .news-up{
    width: 100%;
    height: 7rem;
    margin: 0 auto;
    padding: 0;
    position: relative;
    border-bottom: 1px solid #5f646e ;
}

.content-news .news-up-left{
    width: 70%;
    height: 7rem;
    position: relative;
    float: left;
}

.content-news .news-up-left-title{
    height: auto;
    margin: 10px;
    padding: 0;
    position: absolute;
    left: 0;
    top: 0;
}

.content-news .news-up-left-down1{
    width: auto;
    height: 1.2rem;
    margin: 10px;
    padding: 0;
    position: absolute;
    left: 0;
    bottom: 0;
}

.content-news .news-up-left-down1 span{
    position: relative;
    float: left;
    margin: 0 5px;
    padding: 0;
}

.content-news .news-up-left-down1 .kung{
    border: 1px solid red;
}

.content-news .news-up-left-down2{
    width: auto;
    height: 1.2rem;
    margin: 10px;
    padding: 0;
    position: absolute;
    right: 0;
    bottom: 0;
}

.content-news .news-up-left-down2 span{
    position: relative;
    float: right;
    margin: 0 5px;
    padding: 0;
}
.content-news .news-up-right{
    width: 30%;
    height: 7rem;
    position: relative;
    float: left;
}

.content-news .news-up-right img{
    width: 8rem;
    height: 6rem;
    position: absolute;
    right: 1rem;
    top: 0.5rem;
}


.news-down{
    width: 100%;
    height: 7rem;
    margin: 0 auto;
    padding: 0;
    position: relative;
    border-bottom: 1px solid #5f646e ;
}

.news-down li{
    width: 33%;
    float: left;
    list-style-type: none;
}

.news-down .news-down-bg{
    width: 11rem;
    height: 6rem;
    margin: 0.5rem auto;
    background-image: url("//gqianniu.alicdn.com/bao/uploaded/i4//tfscom/i1/TB1n3rZHFXXXXX9XFXXXXXXXXXX_!!0-item_pic.jpg_320x320q60.jpg");
    position: relative;
}

.news-down .news-down-bg-down{
    width: 100%;
    height: 1.2rem;
    position: absolute;
    left: 0;
    bottom: 0;
    background-color: #111111;
    text-align: center;
}

.news-down .news-down-bg-down span{
    color: #fff;
}

/*********** 赛事部分 **********/
.content-match{
    width: 100%;
    height: auto;
    margin: 0;
}

.content-match .match-title{
    width: 100%;
    height: 1.2rem;
    text-align: left;
    left: 10px;
}

.content-match .match-content{
    width: 100%;
    height: 7rem;
    border-top: 1px solid #5f646e;
    border-bottom: 1px solid #5f646e;
}

.content-match .my-col{
    width: 50%;
    height: 7rem;
    position: relative;
    float: left;
}

#my-col1{
    border-right: 1px solid #5f646e;
}

.content-match .match-army{
    clear: both;
    width: 13rem;
    height: 2.0rem;
    position: absolute;
    left: 0;
    right: 0;
    top: 15px;
    text-align: center;
    align-content: center;
    margin:auto;
}


.content-match .match-army img{
    width: 1.5rem;
    height: 1.5rem;
    position: relative;
    float: left;
}

.content-match  .match-army span{
    position: relative;
    float: left;
}

.content-match .match-time{
    clear: both;
    width: 8rem;
    height: 2.0rem;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 15px;
    text-align: center;
    margin:auto;
}
