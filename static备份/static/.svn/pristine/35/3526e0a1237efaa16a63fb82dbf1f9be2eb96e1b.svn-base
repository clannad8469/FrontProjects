/*--------字体icon应用-------*/
@font-face {
    font-family: 'asaregular';
    src: url('../fonts/asa.eot');
    src: url('../fonts/asa.eot?#iefix') format('embedded-opentype'),
    url('../fonts/asa.woff2') format('woff2'),
    url('../fonts/asa.woff') format('woff'),
    url('../fonts/asa.ttf') format('truetype'),
    url('../fonts/asa.svg#asaregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

