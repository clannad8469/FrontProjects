/*--------Sprites应用-------*/
.sheet div{
    width: 91px;
    height: 91px;

    background-image: url("../img/spriteSheet.png");
    background-repeat: no-repeat;
}

.sheet .icon_1{
    background-position: 0,0;
}
.sheet .icon_2{
    background-position: -102px 0;
}
.sheet .icon_3{
    background-position: -201px 0;
}

.sheet li {
    margin: 10px;
    display: block;
    float: left;
}
