
*{
    margin: 0;
    padding: 0;
}

/* 不同内容板块之间的间距 */
.c-bigline{
    width: 100%;
    height: 16px;
    background-color: #d7d7d7;
}


/* font-size and color set */

/*头条简报字体*/
.news-font{
    font-size: 20pt;
    color: #000;
}

/* 标题字体 */
.title-font{
    font-size: 28pt;
    font-weight: 900;
    color: #000;
}

/* game name 字体 */
.game-name{
    /*font-size: 32px;*/
    font-size: 24pt;
    font-weight: 100;
    color: #000;
}
/* 在线人数字体 */
.num-font{
    font-size: 18pt;
    color: #868686;
}

.show-font{
    font-size: 20pt;
    color: #868686;
}



