
*{
    margin: 0;
    padding: 0;
}

/*轮播部分*/
.swiper-container{
    position: relative;
    width: 100%;
    height: 10rem;
    margin: 0 auto;
}

.swiper-wrapper{
    width: 100%;
    height: 10rem;
}

.swiper-slide{
    width: 100%;
    height: 10rem;
    text-align: center;
    background-color: #111111;
}

.swiper-slide img{
    width: 100%;
    height: 9rem;
}

.my-swiper-des{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50%;
    height: 1rem;
    z-index: 10;
    background-color: #0675bb;
    text-align: center;
}

.my-swiper-des span{
    position: relative;
    float: left;

    margin-bottom: 0;
    color: red;
}


/********** 我的收藏 *********/
.my-collection{
    width: 100%;
    height: auto;
    margin: 0;
    padding: 0 auto;
    border-top: 1px solid #5f646e;
    border-bottom: 1px solid #5f646e;
}

/*common*/
.my-coll-title{
    width: 100%;
    height: 1.5rem;
    position: relative;
    margin: 5px 0;
    border-top: 1px solid #5f646e;
    border-bottom: 1px solid #5f646e;
    text-align: center;
}

.my-coll-title span{
    padding: 5px;
}

.back-or-close{
    position: absolute;
    right: 10px;

}

.my-coll-title .back-or-close>span{
    position: relative;
    float: right;
    margin: 0 20px 0 0;
}


/*my-coll-contentup*/
.my-collection .my-coll-contentup{
    width: 100%;
    height: 6rem;
    margin: 5px auto;
    overflow: scroll;
    overflow-y: hidden;
}

.my-collection .my-coll-contentup ul{
    width: 60rem;
    height: 5rem;
    margin: 0.5rem auto;
    list-style-type: none;
}

.my-collection .my-coll-contentup ul>li{
    width: 12rem;
    height: 5rem;
    list-style: none;
    position: relative;
    float: left;
    border-top: 1px solid red;
    border-bottom: 1px solid red;
    border-right: 1px solid red;
}

.my-collection .my-coll-contentup li:last-child{
    border-right: none;
}

.my-collection .my-coll-contentup img{
    width: 5rem;
    height: 4rem;
    margin: 0.5rem 0 0.5rem 0.5rem;
    position: relative;
    float: left;
}

.my-collection .coll-game-des {
    position: relative;
    float: left;
    width: 6rem;
    height: 5rem;
    margin: 0.5rem 0 0.5rem 10px;

}

.coll-game-des span{
    position: relative;
    float: left;
    font-size: 0.6rem;
    word-spacing:25px;
    color: #5f646e;
}
.coll-game-des span:first-child{
    font-size: 0.85rem;
    word-spacing:25px;
    color: #111111;
}

.coll-game-des span:last-child{
    position: absolute;
    left: 0;
    bottom: 20px;
}


/*hot-game1*/
.hot-game1{
    width: 100%;
    height: 7rem;
    position: relative;
    margin: 0 auto;
    background-color: #4cd964;
    border: 1px solid #1a1a1a;
}

.hot-game1 img{
    width: 24%;
    height: 6rem;
    margin: 0.5rem 0 0.5rem 1%;
    position: relative;
    float: left;
}

.hot-game1 .hot-game1-des{
    width: 75%;
    height: 6rem;
    padding: 0.5rem 10px;
    position: relative;
    float: left;
}

.hot-game1-des .hot-game1-des-keyword span{
    border: 1px solid red;
    margin-right: 10px;
}
.hot-game1-des .hot-game1-des-keyword span:last-child{
    border: none;
    float: right;
}

.hot-game1-des .coll-game1-advertisement{
    position: absolute;
    left: 10px;
    bottom: 0;
}



